# Simple Node.js container for development/demo
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3000

# Start the application in development mode (bypassing build issues)
CMD ["npm", "run", "dev", "--", "--hostname", "0.0.0.0"]
